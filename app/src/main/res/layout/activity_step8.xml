                    android:layout_weight="1"
                    android:id="@+id/progress"
                    tools:progress="50"
                    android:layout_height="wrap_content" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    tools:text="24%"
                    android:id="@+id/progressPercentage"
