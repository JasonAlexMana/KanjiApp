<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/back"
                android:layout_width="26dp"
                android:layout_height="26dp"
                android:scaleType="fitXY"
                android:src="@drawable/ic_back" />

            <View
                android:layout_width="16dp"
                android:layout_height="1dp" />

            <LinearLayout
                android:layout_width="256dp"
                android:layout_height="18dp"
                android:background="@drawable/level_shape"
                android:gravity="center"
                android:orientation="horizontal"
                android:paddingHorizontal="12dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="5dp"
                    android:text="Level 1"
                    android:textColor="@color/white"
                    android:textSize="12sp"
                    android:textStyle="bold" />

                <!--                <View-->
                <!--                    android:layout_width="match_parent"-->
                <!--                    android:layout_height="4dp"-->
                <!--                    android:background="@drawable/item_shape_black"/>-->

                <!-- Linear progress indicator -->
                <com.google.android.material.progressindicator.LinearProgressIndicator
                    android:id="@+id/progress"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    tools:progress="50" />

                <TextView
                    android:id="@+id/progressPercentage"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="5dp"
                    android:textColor="@color/white"
                    android:textSize="12sp"
                    android:textStyle="bold"
                    tools:text="24%" />

            </LinearLayout>

            <View
                android:layout_width="16dp"
                android:layout_height="1dp" />

            <ImageView
                android:id="@+id/settings"
                android:layout_width="26dp"
                android:layout_height="26dp"
                android:scaleType="fitXY"
                android:src="@drawable/ic_setting" />

        </LinearLayout>

        <LinearLayout
            android:layout_marginBottom="100dp"
            android:id="@+id/parent"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="10"
            android:gravity="center"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal">

                <LinearLayout
                    android:id="@+id/layout1"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="12dp"
                    android:background="@drawable/item_shape"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="76dp"
                        android:layout_height="76dp"
                        android:layout_marginTop="10dp"
                        android:background="@drawable/item_shape_white"
                        android:scaleType="centerCrop" />

                    <TextView
                        android:id="@+id/japan1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="うみ"
                        android:textColor="@color/white"
                        android:textSize="10sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="海"
                        android:textColor="@color/white"
                        android:textSize="18sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/roman1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="umi"
                        android:textColor="@color/white"
                        android:textSize="10sp" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/layout2"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="12dp"
                    android:background="@drawable/item_shape"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="76dp"
                        android:layout_height="76dp"
                        android:layout_marginTop="10dp"
                        android:background="@drawable/item_shape_white"
                        android:scaleType="centerCrop" />

                    <TextView
                        android:id="@+id/japan2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="やま"
                        android:textColor="@color/white"
                        android:textSize="10sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="山"
                        android:textColor="@color/white"
                        android:textSize="18sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/roman2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="yama"
                        android:textColor="@color/white"
                        android:textSize="10sp" />

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <LinearLayout
                    android:id="@+id/layout3"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="12dp"
                    android:background="@drawable/item_shape"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="76dp"
                        android:layout_height="76dp"
                        android:layout_marginTop="10dp"
                        android:background="@drawable/item_shape_white"
                        android:scaleType="centerCrop" />

                    <TextView
                        android:id="@+id/japan3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="に ほん ご"
                        android:textColor="@color/white"
                        android:textSize="10sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="日本語"
                        android:textColor="@color/white"
                        android:textSize="18sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/roman3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="no hon go"
                        android:textColor="@color/white"
                        android:textSize="10sp" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/layout4"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="12dp"
                    android:background="@drawable/item_shape"
                    android:gravity="center"
                    android:orientation="vertical">

                    <!--                    <androidx.cardview.widget.CardView-->
                    <!--                        android:layout_width="wrap_content"-->
                    <!--                        android:layout_height="wrap_content"-->
                    <!--                        android:layout_margin="6dp"-->
                    <!--                        app:cardCornerRadius="6dp">-->

                    <ImageView
                        android:layout_width="76dp"
                        android:layout_height="76dp"
                        android:layout_marginTop="10dp"
                        android:background="@drawable/item_shape_white"
                        android:scaleType="centerCrop"
                        android:src="@drawable/item_shape_white" />

                    <!--                    </androidx.cardview.widget.CardView>-->

                    <TextView
                        android:id="@+id/japan4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="とう きょう"
                        android:textColor="@color/white"
                        android:textSize="10sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="東京"
                        android:textColor="@color/white"
                        android:textSize="18sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/roman4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="to kyo"
                        android:textColor="@color/white"
                        android:textSize="10sp" />

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

    <include layout="@layout/bottomsheet_step1" />

</androidx.coordinatorlayout.widget.CoordinatorLayout>