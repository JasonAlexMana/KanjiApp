<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/bottom_sheet_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/item_bottom_rounded"
    android:gravity="center"
    android:orientation="vertical"
    app:behavior_hideable="false"
    app:behavior_peekHeight="120dp"
    app:layout_behavior="com.google.android.material.bottomsheet.BottomSheetBehavior">

    <ImageView
        android:src="@drawable/ic_line_bottomsheet"
        android:layout_margin="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <LinearLayout android:id="@+id/layout0"
        android:layout_width="match_parent"
        android:layout_height="140dp"
        android:background="@drawable/item_bottom_rounded"
        android:gravity="center_horizontal"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="wrap_content"
            android:orientation="vertical"
            android:gravity="center_horizontal"
            android:layout_height="wrap_content">

        <androidx.cardview.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/imgCleaning"
            android:layout_margin="4dp"
            app:cardCornerRadius="6dp">

            <ImageView
                android:layout_width="76dp"
                android:layout_height="76dp"
                android:src="@drawable/ic_cleaning"
                android:background="@drawable/item_shape_white"
                android:scaleType="centerCrop"/>

        </androidx.cardview.widget.CardView>

            <TextView
                android:id="@+id/txtCleaning"
                android:text="Cleaning"
                android:textSize="12sp"
                android:textStyle="bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        </LinearLayout>

        <View
            android:layout_width="6dp"
            android:layout_height="wrap_content" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:orientation="vertical"
            android:gravity="center_horizontal"
            android:layout_height="wrap_content">

        <androidx.cardview.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/imgClothes"
            android:layout_margin="4dp"
            app:cardCornerRadius="6dp">

            <ImageView
                android:layout_width="76dp"
                android:layout_height="76dp"
                android:src="@drawable/ic_clothes"
                android:background="@drawable/item_shape_white"
                android:scaleType="centerCrop"/>

        </androidx.cardview.widget.CardView>

            <TextView
                android:id="@+id/txtClothes"
                android:text="Clothes"
                android:textSize="12sp"
                android:textStyle="bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </LinearLayout>

        <View
            android:layout_width="6dp"
            android:layout_height="wrap_content" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:orientation="vertical"
            android:gravity="center_horizontal"
            android:layout_height="wrap_content">

        <androidx.cardview.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/imgCome"
            android:layout_margin="4dp"
            app:cardCornerRadius="6dp">

            <ImageView
                android:layout_width="76dp"
                android:layout_height="76dp"
                android:src="@drawable/ic_come"
                android:background="@drawable/item_shape_white"
                android:scaleType="centerCrop"/>

        </androidx.cardview.widget.CardView>

        <TextView
            android:id="@+id/txtCome"
            android:text="Come"
            android:textSize="12sp"
            android:textStyle="bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        </LinearLayout>

        <View
            android:layout_width="6dp"
            android:layout_height="wrap_content" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:orientation="vertical"
            android:gravity="center_vertical"
            android:layout_height="wrap_content">

        <androidx.cardview.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/imgDrama"
            android:layout_margin="4dp"
            app:cardCornerRadius="6dp">

            <ImageView
                android:layout_width="76dp"
                android:layout_height="76dp"
                android:src="@drawable/ic_drama"
                android:background="@drawable/item_shape_white"
                android:scaleType="centerCrop"/>

        </androidx.cardview.widget.CardView>

            <TextView
                android:id="@+id/txtDrama"
                android:layout_width="match_parent"
                android:layout_height="42dp"
                android:text="Japanese Classical Drama"
                android:textAlignment="center"
                android:textSize="12sp"
                android:textStyle="bold" />

        </LinearLayout>

    </LinearLayout>

    <LinearLayout android:id="@+id/layout1"
        android:layout_width="match_parent"
        android:background="@color/colorBottom"
        android:layout_height="110dp"
        android:gravity="center|top"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="wrap_content"
            android:orientation="vertical"
            android:gravity="center_horizontal"
            android:layout_height="wrap_content">


        <androidx.cardview.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/imgInteresting"
            android:layout_margin="4dp"
            app:cardCornerRadius="6dp">

            <ImageView
                android:layout_width="76dp"
                android:layout_height="76dp"
                android:src="@drawable/ic_interesting"
                android:background="@drawable/item_shape_white"
                android:scaleType="centerCrop"/>

        </androidx.cardview.widget.CardView>

            <TextView
                android:id="@+id/txtInteresting"
                android:text="Interesting"
                android:textSize="12sp"
                android:textStyle="bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        </LinearLayout>

        <View
            android:layout_width="6dp"
            android:layout_height="wrap_content" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:orientation="vertical"
            android:gravity="center_horizontal"
            android:layout_height="wrap_content">

        <androidx.cardview.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/imgMeeting"
            android:layout_margin="4dp"
            app:cardCornerRadius="6dp">

            <ImageView
                android:layout_width="76dp"
                android:layout_height="76dp"
                android:src="@drawable/ic_meeting"
                android:background="@drawable/item_shape_white"
                android:scaleType="centerCrop"/>

        </androidx.cardview.widget.CardView>

            <TextView
                android:id="@+id/txtMeeting"
                android:text="Meeting"
                android:textSize="12sp"
                android:textStyle="bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        </LinearLayout>

        <View
            android:layout_width="6dp"
            android:layout_height="wrap_content" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:orientation="vertical"
            android:gravity="center_horizontal"
            android:layout_height="wrap_content">


        <androidx.cardview.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/imgPlay"
            android:layout_margin="4dp"
            app:cardCornerRadius="6dp">

            <ImageView
                android:layout_width="76dp"
                android:layout_height="76dp"
                android:src="@drawable/ic_play"
                android:background="@drawable/item_shape_white"
                android:scaleType="centerCrop"/>

        </androidx.cardview.widget.CardView>

        <TextView
            android:id="@+id/txtPlay"
            android:text="Play"
            android:textSize="12sp"
            android:textStyle="bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        </LinearLayout>

        <View
            android:layout_width="6dp"
            android:layout_height="wrap_content" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:orientation="vertical"
            android:gravity="center_horizontal"
            android:layout_height="wrap_content">

        <androidx.cardview.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/imgRest"
            android:layout_margin="4dp"
            app:cardCornerRadius="6dp">

            <ImageView
                android:layout_width="76dp"
                android:layout_height="76dp"
                android:src="@drawable/ic_rest"
                android:background="@drawable/item_shape_white"
                android:scaleType="centerCrop"/>

        </androidx.cardview.widget.CardView>

            <TextView
                android:id="@+id/txtRest"
                android:text="Rest"
                android:textSize="12sp"
                android:textStyle="bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        </LinearLayout>
    </LinearLayout>

</LinearLayout>
