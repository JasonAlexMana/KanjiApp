<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="25dp"
        android:layout_marginLeft="25dp"
        android:layout_marginTop="15dp"
        android:text="RIKORU"
        android:textColor="@color/pink"
        android:textSize="32sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"></TextView>

    <TextView
        android:id="@+id/profilePic"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="170dp"
        android:layout_marginLeft="170dp"
        android:layout_marginTop="64dp"
        android:layout_marginEnd="170dp"
        android:layout_marginRight="170dp"
        android:gravity="center"
        android:text="こんにちは！"
        android:textColor="@color/pink"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"></TextView>

    <ImageView
        android:id="@+id/profile"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="170dp"
        android:layout_marginLeft="170dp"
        android:layout_marginEnd="170dp"
        android:layout_marginRight="170dp"
        android:src="@drawable/profile"
        app:layout_constraintBottom_toTopOf="@+id/NavBar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.171">

    </ImageView>

    <TextView
        android:id="@+id/name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="100dp"
        android:gravity="center"
        android:text="Name"
        android:textColor="@color/pink"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/profilePic"></TextView>

    <ImageView
        android:id="@+id/btnHome"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="30dp"
        android:src="@drawable/houselogo"
        android:translationZ="12dp"
        app:layout_constraintTop_toTopOf="@+id/NavBar"
        app:layout_constraintLeft_toLeftOf="@id/NavBar"
        app:layout_constraintVertical_bias="0.183">

    </ImageView>

    <ImageView
        android:id="@+id/btnKanji"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginRight="30dp"
        android:src="@drawable/dictionarylogo"
        android:translationZ="12dp"
        app:layout_constraintRight_toRightOf="@id/NavBar"
        app:layout_constraintTop_toTopOf="@id/NavBar"
        app:layout_constraintVertical_bias="0.187">

    </ImageView>

    <ImageView
        android:id="@+id/btnPlay"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:src="@drawable/playbutton"
        android:translationZ="12dp"
        app:layout_constraintTop_toTopOf="@id/NavBar"
        app:layout_constraintLeft_toRightOf="@id/btnHome"
        app:layout_constraintRight_toLeftOf="@id/btnKanji"
        app:layout_constraintVertical_bias="0.183">

    </ImageView>

    <View
        android:id="@+id/NavBar"
        android:layout_width="415dp"
        android:layout_height="48dp"
        android:background="@color/yellow2"
        android:translationZ="11dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent" />

    <View
        android:id="@+id/KanjiLearned"
        android:layout_width="128dp"
        android:layout_height="112dp"
        android:layout_marginBottom="355dp"
        android:background="@color/lightgrey"
        android:translationZ="11dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.222"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="Kanji Learned"
        android:textColor="@color/pink"
        android:textSize="18sp"
        android:textStyle="bold"
        android:translationZ="12dp"
        app:layout_constraintLeft_toLeftOf="@id/KanjiLearned"
        app:layout_constraintRight_toRightOf="@id/KanjiLearned"
        app:layout_constraintBottom_toBottomOf="@id/KanjiLearned"
        ></TextView>

    <View
        android:id="@+id/LevelPassed"
        android:layout_width="128dp"
        android:layout_height="112dp"
        android:layout_marginBottom="355dp"
        android:layout_marginLeft="192dp"
        android:background="@color/lightgrey"
        android:translationZ="11dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.222"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="Level Passed"
        android:textColor="@color/pink"
        android:textSize="18sp"
        android:textStyle="bold"
        android:translationZ="12dp"
        app:layout_constraintLeft_toLeftOf="@id/LevelPassed"
        app:layout_constraintRight_toRightOf="@id/LevelPassed"
        app:layout_constraintBottom_toBottomOf="@id/LevelPassed"></TextView>

    <View
        android:id="@+id/WinStreak"
        android:layout_width="128dp"
        android:layout_height="112dp"
        android:layout_marginBottom="217dp"
        android:background="@color/lightgrey"
        android:translationZ="11dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.222"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="Win Streaks"
        android:textColor="@color/pink"
        android:textSize="18sp"
        android:textStyle="bold"
        android:translationZ="12dp"
        app:layout_constraintLeft_toLeftOf="@id/WinStreak"
        app:layout_constraintRight_toRightOf="@id/WinStreak"
        app:layout_constraintBottom_toBottomOf="@id/WinStreak"></TextView>

    <View
        android:id="@+id/Assesment"
        android:layout_width="128dp"
        android:layout_height="112dp"
        android:layout_marginBottom="217dp"
        android:layout_marginLeft="192dp"
        android:background="@color/lightgrey"
        android:translationZ="11dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.222"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="Assesment"
        android:textColor="@color/pink"
        android:textSize="18sp"
        android:textStyle="bold"
        android:translationZ="12dp"
        app:layout_constraintLeft_toLeftOf="@id/Assesment"
        app:layout_constraintRight_toRightOf="@id/Assesment"
        app:layout_constraintBottom_toBottomOf="@id/Assesment"></TextView>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="Note to self"
        android:textColor="@color/white"
        android:textSize="16sp"
        android:textStyle="bold"
        android:translationZ="11dp"
        app:layout_constraintBottom_toTopOf="@id/Note"
        app:layout_constraintLeft_toLeftOf="@id/Note"></TextView>

    <View
        android:id="@+id/Note"
        android:layout_width="320dp"
        android:layout_height="112dp"
        android:layout_marginLeft="45dp"
        android:layout_marginBottom="64dp"
        android:background="@color/lightgrey"
        android:translationZ="11dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent" />

    <TextView
        android:id="@+id/noteToSelfText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:textColor="@color/pink"
        android:translationZ="12dp"
        android:textSize="14dp"
        android:textStyle="bold"
        android:layout_marginLeft="5dp"
        app:layout_constraintTop_toTopOf="@id/Note"
        app:layout_constraintLeft_toLeftOf="@id/Note"/>


    <ImageView
        android:id="@+id/btnSettings"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="20dp"
        android:layout_marginRight="20dp"
        android:src="@drawable/setting"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent">
    </ImageView>

    <View
        android:id="@+id/popupSetting"
        android:layout_width="match_parent"
        android:layout_height="505dp"
        android:background="@drawable/option_popup_rectangle"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:translationZ="10dp" />



</androidx.constraintlayout.widget.ConstraintLayout>