<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools">

<!--    <LinearLayout-->
<!--        android:layout_width="match_parent"-->
<!--        android:layout_height="match_parent"-->
<!--        android:orientation="vertical">-->

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_margin="16dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/back"
                android:layout_width="26dp"
                android:layout_height="26dp"
                android:scaleType="fitXY"
                android:src="@drawable/ic_back"/>

            <View
                android:layout_width="16dp"
                android:layout_height="1dp"/>

            <LinearLayout
                android:layout_width="256dp"
                android:layout_height="18dp"
                android:gravity="center"
                android:orientation="horizontal"
                android:paddingHorizontal="12dp"
                android:background="@drawable/level_shape" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Level 3"
                    android:layout_marginEnd="5dp"
                    android:textStyle="bold"
                    android:textColor="@color/white"
                    android:textSize="12sp"
                    />

                <!--                <View-->
                <!--                    android:layout_width="match_parent"-->
                <!--                    android:layout_height="4dp"-->
                <!--                    android:background="@drawable/item_shape_black"/>-->

                <!-- Linear progress indicator -->
                <com.google.android.material.progressindicator.LinearProgressIndicator
                    android:layout_width="match_parent"
                    android:layout_weight="1"
                    android:id="@+id/progress"
                    tools:progress="50"
                    android:layout_height="wrap_content" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    tools:text="24%"
                    android:id="@+id/progressPercentage"
                    android:layout_marginStart="5dp"
                    android:textStyle="bold"
                    android:textColor="@color/white"
                    android:textSize="12sp"
                    />

            </LinearLayout>

            <View
                android:layout_width="16dp"
                android:layout_height="1dp"/>

            <ImageView
                android:layout_width="26dp"
                android:layout_height="26dp"
                android:scaleType="fitXY"
                android:id="@+id/settings"
                android:src="@drawable/ic_setting"/>

        </LinearLayout>

        <LinearLayout android:id="@+id/parent"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="10"
            android:layout_marginBottom="100dp"
            android:gravity="center"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal" >

                <LinearLayout android:id="@+id/layout2"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:background="@drawable/item_shape"
                    android:gravity="center"
                    android:layout_margin="12dp"
                    android:orientation="vertical" >

                    <ImageView
                        android:layout_width="76dp"
                        android:layout_height="76dp"
                        android:layout_marginTop="10dp"
                        android:background="@drawable/item_shape_white"
                        android:scaleType="centerCrop"/>

                    <TextView
                        android:id="@+id/japan1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="10sp"
                        android:textColor="@color/white"
                        android:text="めし"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:textColor="@color/white"
                        android:text="飯"/>

                    <TextView
                        android:id="@+id/roman1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="10sp"
                        android:textColor="@color/white"
                        android:text="meshi"/>

                </LinearLayout>

                <LinearLayout android:id="@+id/layout3"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:background="@drawable/item_shape"
                    android:gravity="center"
                    android:layout_margin="12dp"
                    android:orientation="vertical" >

                    <ImageView
                        android:layout_width="76dp"
                        android:layout_height="76dp"
                        android:layout_marginTop="10dp"
                        android:background="@drawable/item_shape_white"
                        android:scaleType="centerCrop"/>

                    <TextView
                        android:id="@+id/japan2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="10sp"
                        android:textColor="@color/white"
                        android:text="にく"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:textColor="@color/white"
                        android:text="肉"/>

                    <TextView
                        android:id="@+id/roman2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="10sp"
                        android:textColor="@color/white"
                        android:text="niku"/>

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal" >

                <LinearLayout
                    android:id="@+id/layout4"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:background="@drawable/item_shape"
                    android:gravity="center"
                    android:layout_margin="12dp"
                    android:orientation="vertical" >

                    <ImageView
                        android:layout_width="76dp"
                        android:layout_height="76dp"
                        android:layout_marginTop="10dp"
                        android:background="@drawable/item_shape_white"
                        android:scaleType="centerCrop"/>

                    <TextView
                        android:id="@+id/japan3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="10sp"
                        android:textColor="@color/white"
                        android:text="たまご"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:textColor="@color/white"
                        android:text="卵"/>

                    <TextView
                        android:id="@+id/roman3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="10sp"
                        android:textColor="@color/white"
                        android:text="tamago"/>

                </LinearLayout>

                <LinearLayout android:id="@+id/layout5"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:background="@drawable/item_shape"
                    android:gravity="center"
                    android:layout_margin="12dp"
                    android:orientation="vertical" >

                    <ImageView
                        android:layout_width="76dp"
                        android:layout_height="76dp"
                        android:layout_marginTop="10dp"
                        android:background="@drawable/item_shape_white"
                        android:scaleType="centerCrop"/>

                    <TextView
                        android:id="@+id/japan4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="10sp"
                        android:textColor="@color/white"
                        android:text="りょう り"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:textColor="@color/white"
                        android:text="料理"/>

                    <TextView
                        android:id="@+id/roman4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="10sp"
                        android:textColor="@color/white"
                        android:text="ryo ri"/>

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

    <include layout="@layout/bottomsheet_step3" />

